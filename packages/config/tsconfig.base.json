{
  "compilerOptions": {
    "lib": ["esnext"],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "noEmit": true,
    "strict": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowJs": true,
    "types": [
      "bun-types", // add Bun global
    ],
  }
}
